<div class="py-4">
  <h1 class="my-4">購入明細詳細</h1>

  <p>
    <strong>ご注文者様:</strong>
    <%= @order.family_name %> <%= @order.given_name %> 様
  </p>
  <p>
    <strong>注文日時:</strong>
    <%= @order.created_at %>
  </p>


  <h2>注文商品一覧</h2>
  <table class="table table-hover">
    <thead class="thead-dark">
      <tr>
        <th>商品名</th>
        <th>価格</th>
        <th>数量</th>
      </tr>
    </thead>
    <tbody>
      <% @order.cart_items.each do |item| %>
        <tr>
          <td><%= item.product.name %></td>
          <td><%= item.product.price %></td>
          <td><%= item.quantity %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to '購入明細一覧に戻る', orders_path, class: 'btn btn-primary' %>
</div>